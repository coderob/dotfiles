{
	// ------------------------- EDITOR -----------------------
	"editor.fontSize": 14,
	"editor.fontFamily": "DejaVu Sans Mono, Menlo, Monaco, 'Courier New', monospace",
	"editor.insertSpaces": true,
	"editor.renderWhitespace": "all",
	"editor.tabSize": 2,
	"editor.wordWrap": "on",
	"editor.trimAutoWhitespace": true,

	// ------------------------- FILES -----------------------
	"files.associations": {
		"*.slim": "slim",
		"*.scss.erb": "scss"
	},
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/.DS_Store": true,
		"**/log": true,
		"**/tmp": true,
		"**/vendor": false,
		"**/deps": true,
		"**/_build": true
	},
	"files.insertFinalNewline": true,

	// ------------------------- SEARCH -----------------------
	"search.exclude": {
		"**/node_modules": true,
		"**/bower_components": true,
		"**/deps": true,
		"**/vendor/assets": true,
		"**/vendor/cache": true,
		"**/*.cache": true,
		"**/development.log": true,
		"**/sidecar/melody": true,
		"**/melody": true,
		"**/tmp": true,
		"**/log": true,
		"**/priv/static": true,
		"**/_build": true
	},

	// ------------------------- TERMINAL -----------------------
	"terminal.integrated.shellArgs.osx": [
		"-l"
	],
	"terminal.integrated.scrollback": 10000,
	"terminal.integrated.fontSize": 15,

	// ------------------------- WINDOW -----------------------
	"window.zoomLevel": 0,
	"window.restoreFullscreen": true,

	// ------------------------- WORKBENCH -----------------------
	"workbench.sideBar.location": "left",

	// ------------------------- EXTENSIONS -----------------------
	"ruby.specCommand": "./bin/rspec --no-profile"
}
